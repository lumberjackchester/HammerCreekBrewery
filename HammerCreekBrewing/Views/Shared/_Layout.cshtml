<!DOCTYPE html>
<html ng-app="hammercreekApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hammer Creek Brewing</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body ng-controller="BeerMenuCtrl">
    @RenderBody()
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Hammer Creek Brewing", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

        <ul>
            <li ng-repeat="beer in menu.AllBeer | filter:{LocationName:'Fridge'}">
                {{beer.Name}}
                <p>{{beer.LocationName}}</p>
            </li>
        </ul>
        <ul>
            <li ng-repeat="beer in menu.AllBeer | filter:{LocationName:'Garage'}">
                {{beer.Name}}
                <p>{{beer.LocationName}}</p>
            </li>
        </ul>
        <ul>
            <li ng-repeat="beer in menu.AllBeer | filter:{LocationName:'Basement'}">
                {{beer.Name}}
                <p>{{beer.LocationName}}</p>
            </li>
        </ul>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hammer Creek Brewing</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="/Scripts/angular.js"></script>
    <script src="/Scripts/angular-resource.js"></script>
    <script src="/Scripts/App/controller.js"></script> 
</body>
</html>
